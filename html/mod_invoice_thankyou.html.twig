{% extends request.ajax ? "layout_blank.html.twig" : "layout_default.html.twig" %}
{% block meta_title %}{{ 'Thank you' | trans }}{% endblock %}

{% block content_before %}
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{ 'Payment for invoice received' | trans }}</h1>
				<ol class="breadcrumb">
					<li><a href="{{'invoice'|link }}">{{ 'Invoices' | trans }}</a></li>
					<li><a href="{{ 'invoice'|link }}/{{ invoice.hash }}">{{ "Invoice #%05s"|format(invoice.id) }}</a></li>
					<li class="active">{{ 'Payment for invoice received' | trans }}</li>
				</ol>
            </div>
{% endblock %}
		
{% block content %}
	<div class="alert alert-success text-center">
		<h2>{{ 'Payment for invoice received' | trans }}</h2>
		<p>{{ 'Your payment is being processed right now. This takes about 5 minutes to complete' | trans }}</p>
		<p>{% 'You will be automatically redirected to invoice page after 5 minutes.' %}</p>
	</div>
{% endblock %}

{% block js %}
<script>
    setTimeout(function(){ bb.redirect("{{ ('/invoice/'~invoice.hash)|link }} ");}, 5*60*1000);
</script>
{% endblock %}